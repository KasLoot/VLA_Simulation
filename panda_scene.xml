<mujoco model="panda_scene">
  <!-- 
    1. INCLUDE YOUR URDF 
    Update the 'file' attribute to point to your specific URDF path.
    Based on your logs, it might be "models/panda_description/panda.urdf" 
  -->
  <include file="models/panda_description/panda.xml"/>

  <compiler angle="radian"/>
  <option timestep="0.002"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="140" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="100" height="100"/>
    <material name="groundplane" texture="groundplane" texrepeat="60 60" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  </worldbody>

  <!-- 
    2. DEFINE ACTUATORS 
    We use position actuators for direct joint angle control.
    kp controls the stiffness (P-gain).
  -->
  <actuator>
    <position name="pos1" joint="panda_joint1" kp="1000" kv="100"/>
    <position name="pos2" joint="panda_joint2" kp="1000" kv="100"/>
    <position name="pos3" joint="panda_joint3" kp="1000" kv="100"/>
    <position name="pos4" joint="panda_joint4" kp="1000" kv="100"/>
    <position name="pos5" joint="panda_joint5" kp="1000" kv="100"/>
    <position name="pos6" joint="panda_joint6" kp="1000" kv="100"/>
    <position name="pos7" joint="panda_joint7" kp="1000" kv="100"/>
  </actuator>
</mujoco>